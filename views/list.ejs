<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WD19202</title>
</head>
<body>
    <p>WD19202</p>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Author</th>
                <th>Price</th>
                <th>Image</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% books.forEach((b) => { %>
                <tr>
                    <td><%= b.id %></td>
                    <td><%= b.title %></td>
                    <td><%= b.author %></td>
                    <td><%= b.price %></td>
                    <td><img src="<%= b.image%>" alt=""></td>
                    <td>
                        <a href="/detail/<%= b.id %>">Detail</a>
                        <a href="">Edit</a>
                        <a 
                            onclick="return confirm('Are you sure?')"
                            href="/delete/<%= b.id %>"
                        >
                            Delete
                        </a>
                    </td>
                </tr>
            <% }); %> 
        </tbody>
    </table>
</body>
</html>